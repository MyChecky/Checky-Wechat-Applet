.essays-item {
  padding: 5px 10px;
  border-radius: 2px;
  height: auto;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.pic-text-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.image-view {
  display: flex;
  flex-wrap: wrap;
  height: auto;
  width: 100%;
}

.video-view {
  display: flex;
  flex-wrap: wrap;
  height: auto;
  width: 100%;
}

.image-container {
  width: 48%;
  height: 0px;
  padding-bottom: 48%;
  margin: 0.5%;
  background-color: #f3f5f5;
  position: relative;
}

.video-container {
  width: 96%;
  height: 0px;
  padding-bottom: 48%;
  margin: 0.5%;
  background-color: #f3f5f5;
  position: relative;
}

.essays-pic {
  height: 100%;
  width: 100%;
  position: absolute;
}

.essays-video {
  height: 100%;
  width: 100%;
  position: absolute;
}

.essays-right{
  padding: 20px 0px 20px 10px;
  margin-top: 10px;
  height: 100%;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-content:flex-start;
}
