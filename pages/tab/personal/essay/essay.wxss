.essays-text {
  margin: 10px 0px;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 8;
}
.essays-bottom{
  width: 100%;
  margin: 10px 5px;
  padding-top: 10px; 
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 14px;
  border-top: 1px solid rgba(100, 100, 100, 0.2);
}


.essays-data{
  display: flex;
  width: 100%;
  flex-direction: column;
  color: #868686;
  font-size: 14px;
}

.essays-author{
  font-size: 16px;
  color:#74B9FF;
  margin: 0px 5px;
  max-width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.essays-button{
  flex-grow: 2;
  display: flex;
  justify-content: flex-end;
  font-size: 22px;
  align-items:center;
}
.essays-time{
  font-size: 14px;
  color: #999;
  margin-right: 5px;
}
.like-sum{
  font-size:12px;
  color: #868686;
  height: 20px;
  margin-top: 4px;
  margin-left: 2px;
  margin-right: 5px;
}

.btn{
  color:#e80315;
  background-color: white;
  margin:0px 5px;
}
.fa-commenting-o{
  padding-bottom: 5px;
}
.fa-heart{
  animation: like 0.3s cubic-bezier(.89,.51,.49,1.66);
}
@keyframes like {
  0%{transform: scale(0,0);}
  100%{transform: scale(1,1);}
}