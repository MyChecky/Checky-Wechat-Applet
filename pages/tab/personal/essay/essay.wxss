.essays{
  margin-top: 5px;
  padding: 5px;
  background-color: #f3f5f5;
}
.essays-new{
  z-index: 100;
  position: fixed;
  right: 10px;
  bottom: 10px;
  height: 60px;
  width: 60px;
  background-color: #e83015;
  font-size: 20px;
  display: table;
  border-radius: 50%;
  padding-top: 20px;
  color: #fff;
  box-shadow: 1px 1px 10px 1px rgba(100, 100, 100, 0.3)
}
.essays-new text {
  vertical-align:middle;
}

