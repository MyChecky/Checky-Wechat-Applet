/* pages/tab/personal/setting/setting.wxss */
.form-view{
  width: 100%;
  height: 100%;
  padding: 5px 0px;
  background-color: #f3f5f5;
}

.userinfo-avatar {
  width: 80px;
  height: 80px;
  margin: 5px 10px 20px 10px;
  box-shadow: 2px 2px 10px 3px rgba(100, 100, 100, 0.5);
  border-radius: 50%;
}


.userinfo-nickname {
  color: #333;
}

.header-view {
  background-color: transparent;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 15px 10px;
}

.container-view{
  margin: 10px 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
  border-radius: 2px;
  padding: 5px;
}
.inner-view{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 5px 0px;
  border-bottom: 1px solid rgba(100,100,100,0.2);
  padding:5px 0px;

}
.title-input{
  width: auto;
  height:30px;
  font-size: 16px;
  color: #333;
  padding:5px 5px;
  background-color: #fff;
}

.notifcation{
  color: #e83015;
  font-size: 16px;
  padding: 5px;
  margin: 5px 0px
}
.numOfSus{
  margin: 0px 10px;
}
.typebtn{
  border: none;
  color: #666;
  font-size: 16px;
  font-weight: 600;
  background-color: #fff;
  margin: 0px;
}
.picker{
  color: #666;
}

.confirm{
  background-color: #e83015;
  color: #fff;
  border-radius: 2px;
  box-shadow: 1px 1px 1px 0px rgba(100,100,100,0.5);
  margin: 10px 5px;
  height: 40px;
  font-size: 16px;
}
