/* pages/tab/personal/list/list.wxss */

.title {
  padding: 5px 10px 20px 10px;
  color: #e83015;
  font-size: 20px;
}

.icon {
  margin-right: 10px;
  font-size: 22px;
}

.item-view {
  margin: 10px 10px 0px 10px;
  padding-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid rgba(200, 200, 200, 0.2);
}

.head-view {
}

.imgae-view {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0px 0px 10px 1px rgba(100, 100, 100, 0.2);
}

.pics-view {
  width: 80px;
  height: 80px;
  border-radius: 2px;
}

.content-view {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 10px;
  justify-content: space-between;
  align-items: flex-start;
}

.info-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 0;
  height: 100%;
  position: relative;
  min-height: 16vw;
}

.info-view-appeal-report {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 0;
  height: 100%;
  position: relative;
}

.info-view-msg{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 0;
  height: 100%;
  position: relative;
  /* min-height: 10vw; */
}

.content-msg {
  max-width: 100px;
  font-size: 18px;
  color: #333;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content {
  max-width: 100px;
  font-size: 18px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.date-content {
  bottom: 0;
  position: absolute;
  height: auto;
}

.line {
  margin: 0 auto;
  width: 80%;
  height: 1px;
  border-top: dashed red 1px;
}

.date {
  font-size: 8px;
  color: #aaa;
  line-height: 9px;
}

.like {
  margin: 0px 5px 2px 5px;
  font-size: 14px;
  color: #e83015;
}

.comment {
  margin: 0px 5px 2px 5px;
  font-size: 14px;
  color: #5eb1f5;
}

.subContent {
  max-width: 150px;
  font-size: 14px;
  color: #aaa;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-view-check {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 0px 0px 0px 5px;
  justify-content: space-between;
  align-items: flex-start;
}

.info-view-check {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 0;
  height: 100%;
  position: relative;
  min-height: 8vw;
}

.multicontent {
  max-width: 250px;
  max-height: 50px;
  font-size: 18px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 8vw;
}

.operation-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 16px;
  color: #666;
}

.op-button {
  color: #e83015;
  background-color: #fff;
}

.result-view {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding: 0px 10px;
}

.result {
  color: #e83015;
  font-size: 16px;
}

.state {
  display: flex;
  flex-direction: row;
  color: #666;
  margin-left: 10px;
  font-size: 16px;
}

.type {
  color: #e83015;
  opacity: 0.5;
  margin-right: 10px;
  font-size: 14px;
}

.inner-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 5px 0px;
  border-bottom: 1px solid rgba(100, 100, 100, 0.2);
  padding: 5px 0px;
}

.sendButtonSearch {
  /* margin: 50px 0px; *//* padding-left: 10vw;  */
  width: 15vw;
  height: 10vw;
  border-radius: 2vw;
  background-color: #e83015;
  color: #fff;
  font-size-adjust: true;
  border: none;
  line-height: 40px;
}

.inputSearch {
  width: 80vw;
}

.multicontent-h {
  /* max-width: 90%; */
  max-height: 50px;
  font-size: 18px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 8vw;
}

.result-h {
  color: #666;
  font-size: 16px;
}

.result-hsup {
  color: #666;
  font-size: 16px;
  width: 30%;
  /* min-width: 20%;
  max-width: 20%; */
}

.state-h {
  display: flex;
  flex-direction: row;
  color: #666;
  margin-left: 10px;
  font-size: 16px;
}

.date-h {
  font-size: 16px;
  color: #666;
  /* line-height: 9px; */
}

.date-h-btn {
  font-size: 16px;
  color: #5f82c4;
  /* line-height: 9px; */
}
