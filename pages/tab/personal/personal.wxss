/* pages/tab/personal/personal.wxss */

.userinfo-avatar {
  width: 80px;
  height: 80px;
  margin: 5px 10px 20px 10px;
  box-shadow: 2px 2px 10px 3px rgba(100, 100, 100, 0.5);
  border-radius: 50%;
}

.form-view {
  padding: 0px;
}

.userinfo-nickname {
  color: #333;
}

.header-view {
  background-color: transparent;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 15px 10px;
}

.function-view {
  /* margin-top: 10px; */
  padding: 20px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.inner-view {
  /* border-radius: 5px; */
  margin: 5px 0px;
  padding: 5px 15px;
  background-color: #ddd;
  width: 100%;
  box-sizing: border-box;
  /* box-shadow: 0px 0px 5px 1px rgba(200, 200, 200, 0.2); */

  margin-bottom: 5px;
  /* box-shadow: 0px 5px 2px #aaa; */
  /* background-color: #eee; */
  border-radius: 10px;
}

.function-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  /* background-color: #fff; */
  align-items: center;
  padding: 5px 0px 10px 0px;
  border-bottom: 1px solid rgba(200, 200, 200, 0.2);
  margin: 5px 0px;
  color: #333;
  text-align: end;
  height: 30px;
  transition: 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);

  /* box-shadow: 0px 5px 2px #aaa; */
    /* margin-bottom: 5px;
  background-color: #ddd;
  border-radius: 10px; */
}

.function-item:active {
  color: #e83015;
}

.icon {
  color: #e83015;
  font-size: 22px;
  margin-right: 20px;
}

.text {
  letter-spacing: 2px;
  font-size: 18px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 300rpx;
}

.sub_blue {
  color: blue;
  text-decoration: underline;
}

.userlogin-btn {
  /* margin-top: 15rpx; */
  font-size: 40rpx;
}
