/* pages/tab/essays/essays.wxss */
.essays{
  margin-top: 10px;
  padding: 5px;
  background-color: #f3f5f5;
}

.essays-item{
  padding: 5px 10px 5px 10px;
  height: 120px;
  background-color: #fff;
  display:  flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid rgba(100, 100, 100, 0.1);
}

.essays-pic{
  padding: 8px 8px 8px 8px;
  height: 84px;
  width: 84px;
  background-color: #6f5445
}
.essays-right{
  padding: 20px 10px 20px 10px;
  height: 100%;
  width: 60%;
  display: flex;
  flex-direction: column;
  align-content:flex-start;
}
.essays-text{
  display: flex;
  flex-wrap: wrap;
}
.essays-bottom{
  height: 100px;
  width: 100%;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  font-size: 14px;
}

.essays-data{
  display: flex;
  width: 100%;
  flex-direction: column;
  color: #868686;
  font-size: 14px;
}

.essays-author{
  color:#74B9FF;
}

.essays-button{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  font-size: 20px;
}

.btn{
  color:#e80315;
  margin-right: 5px;
  background-color: white;
}

