<!--pages/tab/essays/essays.wxml-->
<view class='essays'>
  <view class='essays-item' wx:for='{{essays}}'>
    <!--图片-->
    <image class='essays-pic' bindtap='essaysClick'></image>

    <view class="essays-right">
      <!--文字-->
      <view class='essays-text' bindtap='essaysClick'>{{item.essaysText}}</view>
      <view class='essays-bottom'>
        <view class='essays-data'>
          <view class='essays-author'>{{item.userId}}</view>
          <view class='essays-time'>{{item.essayTime}}</view>
        </view>
        <!--按钮-->
        <view class='essays-button'>
          <button class='btn {{isLike?"fa fw fa-thumbs-up":"fa fw fa-thumbs-o-up"}}' bindtap='isLike' mode="top"></button>
          <button class='btn {{isComment?"fa fw fa-commenting":"fa fw fa-commenting-o"}}' bindtap='isComment' mode="top"></button>
        </view>
      </view>
    </view>
  </view>
</view>