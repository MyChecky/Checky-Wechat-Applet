/* pages/tab/tasks/taskDetail/taskDetail.wxss */
.title-view{
  color: #e83015;
  font-size: 20px;
  padding: 2px 5px;
  margin: 10px 0px;
}
.item-view{
  padding: 15px 5px;
  margin: 0px 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid rgba(100,100,100,0.2);
}
.inner-item-view{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.item{
  margin-right: 10px;
}
.detail-btn{
  font-size: 30px;
  color: #666;
  background-color: transparent;
  transition: 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
}
.detail-btn:active{
  color: #333;
  transform: scale(1.2,1.2);
}
.notice{
  background-color: #333;
  font-size: 14px;
  color: #fff;
  padding: 2px;
  letter-spacing: 2px;
  line-height: 24px;
  height: 26px;
  width: 60px;
  border-radius: 13px;
}
.notice:active{
  background-color: #666;
}
.tag{
  margin-right: 20px;
  color: #666;
}
.state{
  overflow-wrap: break-word;
  word-wrap: break-word;
  max-width: 80%;
}
.pass{
  color: #5eb1f5;
}
.fail{
  color: #e83015;
}

.title {
  color: #e83015;
  font-size: 20px;
  padding: 2px 5px;
  margin: 10px 0px;
}

.content-view {
  padding: 5px;
  font-size: 22px;
  color: #333;
  border-top: 1px solid rgba(100, 100, 100, 0.2);
}

.image-view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding: 5px;
  border-top: 1px solid rgba(100, 100, 100, 0.2);
}

.img {
  width: 40%;
  margin: 5px 5%;
  background-color: #f3f5f5;
}

.button-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.sup-button {
  border-radius: 2px;
  box-shadow: 1px 1px 1px 0px rgba(100, 100, 100, 0.5);
  margin: 10px 5px;
  height: 40px;
  width: 40%;
  text-align: center;
  font-size: 16px;
  line-height: 40px;
  display: flex;
  justify-content: center;
  transition: 0.15s cubic-bezier(.71,.44,.62,1.54);
}

.sup-button:active {
  transform: scale(1.1, 1.1);
}

.pass {
  background-color: #e83015;
  color: #fff;
}

.fail {
  background-color: #999;
  color: #fff;
}

.icon {
  font-size: 22px;
  margin-right: 10px;
  line-height: 40px;
}
