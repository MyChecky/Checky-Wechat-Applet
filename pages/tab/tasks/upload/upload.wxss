/* pages/tab/tasks/upload/upload.wxss */
.title{
  color: #e83015;
  margin: 5px;
  padding-bottom: 10px;
  font-size: 16px;
  border-bottom: 1px solid rgba(144,144,144,0.3);
}
.content{
  width: auto;
  height: 150px;
  padding: 5px;
  word-wrap: break-word;
}
.limit{
  color: #999;
  width: auto;
  font-size: 16px;
  margin: 10px 5px;
  padding: 2px 5px;
  text-align: right;
}
.submit{
  background-color: #e83015;
  color: #fff;
  border-radius: 2px;
  box-shadow: 1px 1px 1px 0px rgba(100,100,100,0.5);
  margin: 10px 5px;
  height: 40px;
  font-size: 16px;
}
.file{
  width: 80px;
  height: 80px;
  margin: 5px 1.25%;
  padding: 2px;
  font-size: 30px;
  text-align: center;
  border-radius: 2px;
  background-color: #f3f5f5;
  line-height: 80px;
  box-shadow: 1px 1px 5px 0px rgba(100,100,100,0.5);
}
.img-view{
  width: 22.5%;
  padding: 0px;
  margin: 5px 1.25%;
  padding-bottom: 22.5%;
  background-color: #f3f5f5;
  position: relative;
  overflow: hidden;
  box-shadow: 0px 0px 5px 1px rgba(144,144,144,0.3);
}
.img{
  width: 100%;
  height: 100%;
  position: absolute;
}
.button-view{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.img-view:hover .cancel{
  bottom: 0px;
}
.cancel{
  position: absolute;
  width: 100%;
  bottom: -30px;
  color: #fff;
  height: 30px;
  font-size: 14px;
  line-height: 30px;
  background-color: rgba(232,48,21,0.5);
  border-radius: 0px;
  transition: 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
}