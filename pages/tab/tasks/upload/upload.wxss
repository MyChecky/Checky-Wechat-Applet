.img-view {
  width: 22%;
  padding: 0px;
  margin: 5px 1.25%;
  padding-bottom: 22.5%;
  background-color: #f3f5f5;
  position: relative;
  overflow: hidden;
  box-shadow: 0px 0px 5px 1px rgba(144, 144, 144, 0.3);
}

.img {
  width: 100%;
  height: 100%;
  position: absolute;
}

.rec-view {
  width: 96%;
  padding: 0px;
  margin: 5px 1.25%;
  background-color: #f3f5f5;
  color: #e83015;
  position: relative;
  overflow: hidden;
  box-shadow: 0px 0px 5px 1px rgba(144, 144, 144, 0.3);
}

.rec {
  width: 100%;
  height: 100%;
  position: absolute;
}

.audio-rec {
  color: #e83015;
}

.vid-view {
  width: 96%;
  padding: 0px;
  margin: 5px 1.25%;
  padding-bottom: 68%;
  background-color: #f3f5f5;
  position: relative;
  overflow: hidden;
  box-shadow: 0px 0px 5px 1px rgba(144, 144, 144, 0.3);
}

.vid {
  width: 100%;
  height: 100%;
  position: absolute;
}

.button-view {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.img-view:hover .cancel {
  bottom: 0px;
}

.share {
  font-size: 16px;
}

.cancel {
  position: absolute;
  width: 100%;
  bottom: -30px;
  color: #fff;
  height: 30px;
  font-size: 14px;
  line-height: 30px;
  background-color: rgba(232, 48, 21, 0.5);
  border-radius: 0px;
  transition: 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
}

.recording-view {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.recording-view {
  background-color: #f7f7f7;
}

.recording-op-left {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top: 50%;
  left: 15%;
  z-index: 10;
  transform: translate(-50%, -50%);
  font-size: 40px;
  /* color: #e83015; */
  color: rgba(92, 212, 76, 0.7);
}

.recording-op-right {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top: 50%;
  right: 15%;
  z-index: 10;
  transform: translate(-50%, -50%);
  font-size: 40px;
  color: rgba(92, 212, 76, 0.7);
}

.recording, .dot {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation-iteration-count: 1;
}

.recording {
  background: rgba(92, 212, 76);
  z-index: 10;
}

.dot {
  background: rgba(92, 212, 76, 0.7);
  z-index: 9;
}

.dot-blowup {
  animation: sploosh2 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
  animation-fill-mode: forwards;
}

.dot-zoomout {
  animation: sploosh3 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
  animation-fill-mode: forwards;
}

@keyframes sploosh2 {
  0% {
    box-shadow: 0 0 0 0px rgba(92, 212, 76, 0.7);
    background: rgba(92, 212, 76, 0.7);
  }

  100% {
    box-shadow: 0 0 0 15px rgba(92, 212, 76, 0.3);
    background: rgba(92, 212, 76, 0.3);
  }
}

@keyframes sploosh3 {
  0% {
    box-shadow: 0 0 0 15px rgba(92, 212, 76, 0.3);
    background: rgba(92, 212, 76, 0.3);
  }

  100% {
    box-shadow: 0 0 0 0px rgba(92, 212, 76, 0.7);
    background: rgba(92, 212, 76, 0.7);
  }
}

.record image {
  height: 90rpx;
  width: 90rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 10;
  background: transparent;
  transform: translate(-50%, -50%);
}

