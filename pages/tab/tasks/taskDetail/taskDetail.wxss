/* pages/tab/tasks/taskDetail/taskDetail.wxss */
.title-view{
  color: #e83015;
  font-size: 22px;
  padding: 2px 5px;
  margin: 10px 0px;
}
.item-view{
  padding: 15px 5px;
  margin: 0px 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid rgba(100,100,100,0.2);
}
.inner-item-view{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.item{
  margin-right: 10px;
}
.notice{
  background-color: #333;
  font-size: 14px;
  color: #fff;
  padding: 2px;
  letter-spacing: 2px;
  line-height: 24px;
  height: 26px;
  width: 60px;
  border-radius: 13px;
}
.notice:hover{
  background-color: #666;
}
.tag{
  margin-right: 20px;
  color: #666;
}
.state{
  overflow-wrap: break-word;
  word-wrap: break-word;
  max-width: 80%;
}
.pass{
  color: #08d101;
}
.fail{
  color: #e83015;
}