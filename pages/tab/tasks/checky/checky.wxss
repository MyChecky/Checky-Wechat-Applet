/* pages/tab/tasks/checky/checky.wxss */

.title {
  color: #e80315;
  font-size: 20px;
  padding: 2px 5px;
  margin: 10px 0px;
}

.content-view {
  padding: 5px;
  font-size: 22px;
  color: #333;
  border-top: 1px solid rgba(100, 100, 100, 0.2);
}

.image-view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding: 5px;
  border-top: 1px solid rgba(100, 100, 100, 0.2);
}

.img {
  width: 40%;
  margin: 5px 5%;
  background-color: #f3f5f5;
}

.button-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.sup-button {
  border-radius: 2px;
  box-shadow: 1px 1px 1px 0px rgba(100, 100, 100, 0.5);
  margin: 10px 5px;
  height: 40px;
  width: 40%;
  text-align: center;
  font-size: 16px;
  line-height: 40px;
  display: flex;
  justify-content: center;
  transition: 0.15s cubic-bezier(.71,.44,.62,1.54);
}

.sup-button:active {
  transform: scale(1.1, 1.1);
}

.pass {
  background-color: #e80315;
  color: #fff;
}

.fail {
  background-color: #999;
  color: #fff;
}

.icon {
  font-size: 22px;
  margin-right: 10px;
  line-height: 40px;
}
