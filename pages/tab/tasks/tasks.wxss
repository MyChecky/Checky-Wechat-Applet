/* pages/tab/tasks/tasks.wxss */
.topnavFixed{
border-top-left-radius:20rpx;
border-top-right-radius:20rpx;
position:fixed;
width:100%;
height:100rpx; 
top:0rpx;
background:white;
z-index: 1;
}
.topnavAbsolute{
border-top-left-radius:20rpx;
border-top-right-radius:20rpx;
position:absolute;
width:100%;
height:100rpx; 
top:1rpx;
background:white;
z-index: 1;
}
.swiper-tab{  
  width: 100%;
  border-bottom: 2rpx solid #cccccc;  
  text-align: center;  
  line-height: 80rpx;
  }  
.swiper-tab-list{  
  font-size: 36rpx;  
  display: inline-block;  
  width: 20%;  
  color: #000000;  
}  
.on{ color: #e83015;  
  border-bottom: 5rpx solid #e83015;
}
  
.swiper-box{ 
  display: block; 
  height: 1000px; 
  width: 100%; 
  overflow: hidden; 
}
.newtask1{
  position: fixed;
  margin-left: 12px;
  width: 30px;
  height: 30px;
  background-color: white;
  display: flex;
  flex-direction: column;
  border: none; 
  border-radius: 0;
  align-items: center;
  justify-content: center;
}
.ntImg{
  width:40rpx;
  height: 40rpx;
}
.newtask1::after{
  border: 0;
}

.calendar {
  background-color:white; /*背景色为白色*/
  padding-top: 10px;    /*上内边距为10px*/
  color: #e83015;
  
}
.calendar-header{
  font-size: large;
  color: #000000;   /*修改了标题文字和按钮的颜色*/
}

.hidCal{
  z-index: 100;
  position: fixed;
  right: 6px;
  width: 30px;
  height: 30px;
  background-color: white;
  display: flex;
  flex-direction: column;
  border: none; 
  border-radius: 0;
  align-items: center;
  justify-content: center;
}
.hcImg{
  width:40px;
  height: 40px;
  background-color: #fff;
}
.hidCal::after{
  border: 0;
}
.hiddenCal{
  border-bottom: 2rpx solid #cccccc;
  transition: 0.3s cubic-bezier(0.165, 0.84, 0.44, 1); 
}
.li {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  width:100%;
  line-height: 80rpx;
}

.date{
margin-left:10px;
height: 20px;
font-size: 16px;
}
.unfinished{
height: 70rpx;
width: 100%;
margin-left: 10px;
margin-right: 10px;
text-align: center;
background-color: #e83015;
border-bottom: 1rpx solid #e83015;

}
.unfinished-text{
  color: #fff;
  font-size: 30rpx;
}
.unfin-item{
  width: 93%;
  height: 120rpx;
  margin-left: 10px;
  margin-right: 10px;
  background-color: #fff;
  border-bottom: 1rpx solid  #e83015;
  border-left: 1rpx solid #e83015;
  border-right: 1rpx solid #e83015;
}
.detail_btn{
  position: absolute;
  right: 20px;
  margin-top: 10px;
  width: 30px;
  height: 30px;
  background-color: white;
  display: flex;
  flex-direction: column;
  border: none; 
  border-radius: 0;
  align-items: center;
  justify-content: center;
}
.detail-img{
  width:40rpx;
  height: 40rpx;
}
.detail_btn::after{
  border: 0;
}
.task-name{
position: absolute;
margin-top:10rpx;
left: 20px;
font-size: 18px;
}
.task-des{
position: absolute;
margin-top:10px;
left: 20px;
font-size:12px;
color: #3e3e3e;
}
.unchecked{
margin-top:30rpx;
height: 70rpx;
width: 100%;
margin-left: 10px;
margin-right: 10px;
text-align: center;
background-color: #3e3e3e;
border-bottom: 1rpx solid #3e3e3e;
}

.unche-text{
  color: #fff;
  font-size: 30rpx;
}
.unche-item{
  width: 93%;
  height: 120rpx;
  margin-left: 10px;
  margin-right: 10px;
  background-color: #fff;
  border-bottom: 1rpx solid  #3e3e3e;
  border-left: 1rpx solid #3e3e3e;
  border-right: 1rpx solid #3e3e3e;
}

.success{
margin-top:30rpx;
height: 70rpx;
width: 100%;
margin-left: 10px;
margin-right: 10px;
text-align: center;
background-color: #fff;
border: 1rpx solid #939393;
}
.suc-text{
  color: #000;
  font-size: 30rpx;
}

.suc-item{
  width: 93%;
  height: 120rpx;
  margin-left: 10px;
  margin-right: 10px;
  background-color: #fff;
  border-bottom: 1rpx solid  #939393;
  border-left: 1rpx solid #939393;
  border-right: 1rpx solid #939393;
}

.task-state{
position: absolute;
margin-top:10px;
left: 20px;
font-size:12px;
color: #259b24;
}