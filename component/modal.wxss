/* modal.wxss */
.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  left:0;top:0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.modal_box {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #f3f5f5;
  margin: -150px 12% 0 12%;
  border-radius: 3px;
  box-shadow: 0px 0px 10px 1px rgba(100, 100, 100, 0.5);
}
 
.title {
  padding: 15px;
  text-align: center;
  background-color: gazure;
}
 
.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
.input-content{
  background-color: #fff;
  padding: 5px;
  font-size: 20px;
  color: #333;
  margin: 10px 2px;
  border: 1px solid rgba(200, 200, 200, 0.2);
}
 
.btn {
  width: 100%;
  font-size: 16px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
}
 
.cancel {
  width: 100%;
  padding: 10px;
  text-align: center;
  color: #e83015;
}
 
.Sure {
  width: 100%;
  padding: 10px;
  background-color: gainsboro;
  text-align: center;
}
 
.modalMsg {
  text-align: center;
  margin-top: 45rpx;
  display: block;
}